<header class ="navbar navbar-fixed-top navbar-default">
   <div class="container">
     <%= link_to "CITYGUIDE", root_path, class: "btn btn-lg btn-success", id: "logo" %>
        <div class="nav_item">
         <%= link_to "PURI", recipes_path, class: "btn btn-default btn-warning" %>
        </div>
        <div class="nav_item">
         <%= link_to "BHUBANESWAR", cheffs_path, class: "btn btn-default btn-warning" %>
        </div>

        <% if logged_in? and current_user.admin? %>
        <div class="nav_item">
         <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
         <%= link_to "New Hotel", new_hotel_path, class: "btn btn-default btn-warning" %>
        </div>
        <% end %>


        <% if logged_in? %>
        <ul class="nav_item">
            <li class="dropdown">
              <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
                <%= current_user.chefname %> <b class="caret"></b>
                <% end %>
            <ul class="dropdown-menu">
                <li><%= link_to "View Profile", cheff_path(current_user) %></li>
                <li><%= link_to "Edit Profile", edit_cheff_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Logout", logout_path %></li>
            </ul> 
            </li>
        </ul>
        <% else %>
         <div class="nav_item">
         <%= link_to "Log in", login_path, class: "btn btn-default btn-success" %>
        </div>
        <% end %>
    </div>


    <%= form_tag :recipes, :method => 'get' do %>
       <p>
     <%= text_field_tag :search, params[:search] %>
     <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>

</header>